pipeline {
    agent any
    stages {
        stage('Clone') {
            steps { 
                git https://github.com/kabirbaidhya/react-todo-app.git
            }
        }
        stage('Install Dependencies') {
            steps {
                // Install dependencies
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                // Build the application
                sh 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                // Deploy the application
                sh 'npm run deploy'
            }
        }
    }
}
